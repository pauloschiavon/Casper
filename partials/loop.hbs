{{!-- Previous/next page links - only displayed on page 2+ --}}
<div class="extra-pagination inner">
    {{pagination}}
</div>

{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
    </header>

    {{#if image}}
        <a href="{{url}}">
            <section class="post-excerpt post-image" style="background-image: url({{image}});">
            </section>
        </a>
    {{/if}}

    <section class="post-excerpt">
        <p>{{excerpt words="20"}}... <a class="read-more" href="{{url}}">Leia mais &raquo;</a></p>
    </section>
    <footer class="post-meta">
        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
        {{author}}
        <b>{{tags prefix=" em "}}</b>
        <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD-MM-YYYY"}}</time>
    </footer>
</article>
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}

<article class="post">
    {{#if @labs.subscribers}}
        <section class="gh-subscribe">
            <h3 class="gh-subscribe-title">Inscreva-se no  {{@blog.title}}</h3>
            <p>Receba nossos artigos e atualizações diretamente no seu e-mail.</p>
            {{subscribe_form placeholder="Coloque seu e-mail"}}
            <span class="gh-subscribe-rss">ou inscreva-se <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/">via RSS</a> com o Feedly!</span>
        </section>
    {{/if}}
</article>
