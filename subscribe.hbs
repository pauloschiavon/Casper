{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The main content area on the homepage --}}
<main class="content" role="main">
  <footer class="post-footer">
    {{#if success}}
      <header>
        <h1>Inscrito!</h1>
      </header>

      <p>
        Você foi inscrito com sucesso no <em>{{@blog.title}}</em>
        com o e-mail <em>{{email}}</em>.
      </p>
    {{else}}
      <section class="gh-subscribe">
          <h3 class="gh-subscribe-title">Inscreva-se no  {{@blog.title}}</h3>
          <p>Receba nossos artigos e atualizações diretamente no seu e-mail.</p>
          {{subscribe_form placeholder="Coloque seu e-mail"}}
          <span class="gh-subscribe-rss">ou inscreva-se <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/">via RSS</a> com o Feedly!</span>
      </section>
    {{/if}}

    <br />
    <br />
    <b><a href="{{@blog.url}}" class="gh-flow-back">Voltar</a></b>
  </footer>
</main>
